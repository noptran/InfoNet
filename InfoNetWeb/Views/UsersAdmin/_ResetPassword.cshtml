@model Infonet.Web.ViewModels.Account.PasswordResetViewModel
				<div class="form-group">
					@Html.ValidationSummary(false, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.NewPassword, new { @class = "control-label icjia-required" })
					@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control dirtyignore" })
					@Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "help-block" })
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label icjia-required" })
					@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control dirtyignore" })
					@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "help-block" })
				</div>

