@model Infonet.Web.ViewModels.CommunityServicesViewModel

@{ 
	Model.ProgramDetailStaff = Model.ProgramDetailStaff ?? new List<ProgramDetailStaff>();
	if(Model.ProgramDetailStaff.Count == 0) {
		Model.ProgramDetailStaff.Add(new ProgramDetailStaff());
	}
}

@for (int i = 0; i < Model.ProgramDetailStaff.Count; i++) {
<tr class="staffInfo">
    <td class="staffMainCells">
        <div class="form-group">
            @Html.HiddenFor(m => m.ProgramDetailStaff[i].ICS_Staff_ID, new { @class = "staffData" })
            @Html.HiddenFor(m => m.ProgramDetailStaff[i].ICS_ID, new { @class = "staffData" })
            @Html.HiddenFor(m => m.ICS_ID)
            @Html.DropDownListFor(m => m.ProgramDetailStaff[i].SVID, new SelectList(Data.Centers.GetStaffForCenterAndDateRetainCurrentSvid(Model.PDate, Session.Center().Id, Model.ProgramDetailStaff[i].SVID), "SVID", "EmployeeName", Model.ProgramDetailStaff[i].SVID), "<Pick One>", new { @class = "form-control staffData" })
            @Html.ValidationMessageFor(m => m.ProgramDetailStaff[i].SVID, "", new { @class = "help-block" })
        </div>
    </td>

    <td class="staffMainCells">
        <div class="form-group">
            @Html.TextBoxFor(m => m.ProgramDetailStaff[i].ConductHours, new { @class = "form-control staffData", type = "number", step = ".25" })
            @Html.ValidationMessageFor(m => m.ProgramDetailStaff[i].ConductHours, "", new { @class = "help-block" })
        </div>
    </td>
    <td class="staffMainCells">
        <div class="form-group">
            @Html.TextBoxFor(m => m.ProgramDetailStaff[i].HoursPrep, new { @class = "form-control staffData", type = "number", step = ".25" })
            @Html.ValidationMessageFor(m => m.ProgramDetailStaff[i].HoursPrep, "", new { @class = "help-block" })
        </div>
    </td>
    <td class="staffMainCells">
        <div class="form-group">
            @Html.TextBoxFor(m => m.ProgramDetailStaff[i].HoursTravel, new { @class = "form-control staffData", type = "number", step = ".25" })
            @Html.ValidationMessageFor(m => m.ProgramDetailStaff[i].HoursTravel, "", new { @class = "help-block" })
        </div>
    </td>
    <td class="deleteStaffRow deleteButton"><button class="btn btn-danger" type="button"><span class="glyphicon glyphicon-trash"></span></button></td>
    <td class="restoreStaffRow hide" style="border:none; padding-top: 0px"><button type="button" class="btn btn-primary" aria-label="Restore Deleted Staff" data-icjia-role="staff.restore"><span class="glyphicon glyphicon-undo"></span></button></td>
</tr>
}

