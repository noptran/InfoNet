@using Infonet.Reporting.Enumerations
@model Infonet.Reporting.ViewModels.ManagementReportViewModel
@{
	string panelTitle = (string)ViewData["panelTitle"];
}
<div class="panel panel-primary icjia-error-group reportProperty @SubReportSelection.MngRptClientClientDetail.GetShortName()" style="display:none">
	<div class="panel-heading">
		<h2 class="panel-title">
			<span class="icjia-panel-title-text">@panelTitle</span>
		</h2>
	</div>
	<div class="panel-body">
		<div class="row">
			@foreach (var field in Model.ClientDetailAvailableOrderSelections) {
				string chkd = string.Empty;
				string disabled = string.Empty;
				if (Model.ClientDetailOrderSelection == field) {
					chkd = "checked='checked'";
				}
				if (Model.ClientDetailColumnSelections == null || Model.ClientDetailColumnSelections.All(c => c.ToString() != field.ToString()))
				{
					disabled = "disabled='disabled'";
				}
				<div class="col-xs-6 col-sm-4 col-md-2">
					<div class="checkbox">
						<label>
							<input type="radio" name="@Html.NameFor(model => model.ClientDetailOrderSelection)" value="@((int)field)" data-icjia-name="@field.ToString()" @chkd @disabled /> @( field.GetDisplayName() )
						</label>
					</div>
				</div>
			}
		</div>
	</div>
</div>

