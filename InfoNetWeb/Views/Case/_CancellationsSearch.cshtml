@model CancellationsSearchDates

<div class="row">
	<div class="col-lg-6">
		<div class="form-group">
			@Html.Label("CancellationsDateRangeStart", "Date Range", new { @class = "control-label", data_toggle = "tooltip", title = "Enter the date range containing cancellation/no show records you want to view." })
			<div class="input-daterange input-group" id="datepickerCancellations" data-provide="datepicker">
				@Html.TextBoxFor(m => m.CancellationsDateRangeStart, "{0:MM/dd/yyyy}", new { @class = "form-control cancellationsDateRange dirtyignore", autocomplete = "off" })
				<span class="input-group-addon"><b>to</b></span>
				@Html.TextBoxFor(m => m.CancellationsDateRangeEnd, "{0:MM/dd/yyyy}", new { @class = "form-control cancellationsDateRange dirtyignore", autocomplete = "off"})
			</div>
			<div>@Html.ValidationMessageFor(m => m.CancellationsDateRangeStart)</div>
			<div>@Html.ValidationMessageFor(m => m.CancellationsDateRangeEnd)</div>
		</div>
	</div>
	<div class="form-group col-lg-3">
		<label for="cancellationsDateRangesSelect" class="control-label">Date Ranges</label>
		<select class="form-control cancellationsDateRange dirtyignore" name="Range" id="cancellationsDateRangesSelect" data-icjia-role="dateRanges" data-icjia-start="#cancellationsSearchDates_0__CancellationsDateRangeStart" data-icjia-end="#cancellationsSearchDates_0__CancellationsDateRangeEnd" data-icjia-default-range="0">
			@Html.Partial("_DateRangeOptions1-8")
		</select>
	</div>

	<div class="form-group col-lg-3 icjia-search-reset">
		<button type="button" id="cancellationsSearch" class="btn btn-primary icjia-has-spinner"> <span class="icjia-spinner"><img src="~/Content/Images/ajax-loader.gif" width="12" height="12"></span>Search <span class="glyphicon glyphicon-search"></span></button>
		<button type="button" class="btn btn-warning cancel" id="cancellationsReset">
			Reset <span class="glyphicon glyphicon-refresh"></span>
		</button>
	</div>
</div>