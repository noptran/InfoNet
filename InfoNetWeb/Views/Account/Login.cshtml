@model Infonet.Web.ViewModels.Account.LoginViewModel

@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Account/_AnonymousLayout.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { autocomplete = "off" })) {
	@Html.ValidationSummary(true, "", new { @class = "help-block text-danger-login" })
	@Html.AntiForgeryToken()
	<p id="capsWarn" class="help-block text-danger-login text-center" style="display:none"><span class="glyphicon glyphicon-warning-sign"></span>&nbsp;&nbsp;CAPS lock is on</p>
	<div class="form-group">
		@Html.LabelFor(m => m.Username, new { @class = "control-label" })
		@Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Username, "", new { @class = "help-block" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Password, new { @class = "control-label" })
		@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Password, "", new { @class = "help-block" })
	</div>
	<div class="form-group">
		<input type="submit" value="Login" class="btn btn-success" />
		@Html.ActionLink("Clear", "Login", "Account", null, new { @class = "btn btn-warning" })
	</div>
	@*<div class="form-group mb-0">
		@Html.ActionLink("Forgot your password?", "ForgotPassword")
	</div>*@
}

@section Scripts{
	@Scripts.Render("~/Scripts/caps-lock.js")
	@Scripts.Render("~/Scripts/Views/Account/Login.js")
}